# Explicitly set the R encoding using the system one, if it exists
if (file.exists("/etc/default/locale")) {
        readRenviron("/etc/default/locale")
        LANG <- Sys.getenv("LANG")
        if(nchar(LANG))
                Sys.setlocale("LC_ALL", LANG)
}

