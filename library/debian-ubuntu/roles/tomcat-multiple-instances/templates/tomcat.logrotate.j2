{{ tomcat_m_instances_logdir_base }}/{{ item.http_port }}/catalina.out {
  copytruncate
  {{ item.log_rotation_freq }}
  rotate {{ item.log_retain }}
  compress
  missingok
  create 640 {{ item.user }} adm
}

{{ tomcat_m_instances_logdir_base }}/{{ item.http_port }}/localhost_access.log {
  copytruncate
  {{ item.log_rotation_freq }}
  rotate {{ item.log_retain }}
  compress
  missingok
  create 640 {{ item.user }} adm
}
